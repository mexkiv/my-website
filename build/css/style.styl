
@import "variables.styl"

body 
	background: #FFF;
	font-family: 'Open Sans', sans-serif;
	font-size: 16px;
	color: black;

a 
	color: inherit;
	text-decoration: none;

p 
	color: lighten(black, 40);

h1, h2
	font-weight: normal;

h2
	text-transform: uppercase;
	font-size: 16px;

h3 
	font-size: 22px;

.side 

	@media desktop
		background: yellow;
		position: fixed;
		top: 0px;
		left: 0px;
		width: 300px;
		height: 100%;
		text-align: center;
		.photo 
			width: 200px;
			margin: 30px auto;
			img 
				width: 100%;
				border-radius: 100px;
		.social 
			margin: 30px 0px;
			a 
				margin: 0px 5px;
				font-size: 20px;
				&:hover 
					color: lighten(black, 30);

	@media mobile 
		padding: 5px 0px;
		background: yellow;
		top: 0px;
		left: 0px;
		width: 100%;
		text-align: center;
		h1, h2 
			margin: 5px 0px;
		.photo 
			width: 100px;
			margin: 0px auto;
			img 
				width: 100%;
				border-radius: 100px;
		.social 
			margin: 10px 0px;
			a 
				margin: 0px 5px;
				font-size: 20px;
				&:hover 
					color: lighten(black, 30);

.content 
	@media desktop
		padding: 0px 30px 0px 330px;
	@media mobile
		padding: 0px 30px 0px 30px;
	max-width: 900px;
	a 
		color: black;

.source 
	@media desktop
		position: fixed;
		right: 10px;
		bottom: 0px;
	text-align: right;
	font-size: 10px;
	text-transform: uppercase;
	background: #FFF;


